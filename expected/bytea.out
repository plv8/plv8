CREATE FUNCTION valid_arraybuffer_bytea(len integer) RETURNS bytea
LANGUAGE plv8 IMMUTABLE STRICT
AS $$
  return new ArrayBuffer(len);
$$;
SELECT length(valid_arraybuffer_bytea(20));
 length 
--------
     20
(1 row)

